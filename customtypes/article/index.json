{
  "id": "article",
  "label": "Article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,em"
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Hero Image",
          "constraint": {
            "width": 2500,
            "height": 1400
          },
          "thumbnails": [
            {
              "name": "md",
              "width": 1250,
              "height": 800
            },
            {
              "name": "sm",
              "width": 625,
              "height": 450
            }
          ]
        }
      },
      "date_published": {
        "type": "Date",
        "config": {
          "label": "Date published",
          "placeholder": ""
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Type",
          "placeholder": "",
          "options": [
            "News",
            "Draft"
          ],
          "default_value": "News"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "image": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}